{
  "name": "rhook-ts",
  "private": false,
  "version": "1.0.7",
  "description": "re-usable react toggle hook",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs --target es5",
    "build:esm": "tsc -p tsconfig.build.json --module esNext --outDir dist/esm --target es6",
    "publish": "npm publish",
    "pack": "npm pack",
    "clean":"rimraf -rf ./dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run start"
  },
  "keywords": [
    "react",
    "hooks"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Rahul-Das-Sarma/rhook-ts.git"
  },
  "author": "Rahul Das",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
