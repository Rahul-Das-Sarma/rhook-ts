{
  "name": "rhook-ts",
  "private": false,
  "version": "1.1.8",
  "description": "Reusable react toggle hook",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs --target es5",
    "build:esm": "tsc -p tsconfig.build.json --module esNext --outDir dist/esm --target es6",
    "pack": "npm pack",
    "clean": "rimraf -rf ./dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "semantic-release",
    "bump": "bump --tag 'rhook-ts@%s' --commit 'release: rhook-ts@%s'",
    "start": "npm run start"
  },
  "keywords": [
    "react",
    "hooks"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Rahul-Das-Sarma/rhook-ts.git"
  },
  "author": {
    "name": "Rahul Das",
    "email": "rahuldas35748@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
    "semantic-release": "^20.1.0",
    "typescript": "^4.9.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "all-contributors-cli": "^6.24.0"
  },
  "release": {
    "branches": [     
      "main"     
    ]
  }

}
